@page

<script>
    var username = "@User.Identity!.Name";
</script>

<style>
    .main-container {
        display: flex;
        flex-direction: row;
        height: 85vh;
    }

    .contacts-container {
        width: 200px;
        border-right: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        padding: 10px;
    }

    .contact-button {
        background-color: #f8f9fa;
        border: none;
        padding: 10px;
        margin: 5px 0;
        text-align: left;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .contact-button:hover {
            background-color: #ddd;
        }

    .active-contact {
        background-color: #007bff;
        color: white;
    }

    .test {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        overflow: hidden;
    }

    .content {
        overflow-y: auto;
        height: calc(100% - 140px);
    }

    .input-container {
        flex-shrink: 0;
        background-color: #f8f9fa;
    }

    .row {
        display: flex;
        align-items: center;
        padding: 10px 0;
    }

    #sendButton, #uploadButton {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        border-radius: 50%;
        border: none;
        outline: none;
        color: white;
        background-color: #1751d0;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    #uploadButton {
        margin-right: 10px;
    }

    #sendButton {
        margin-left: 10px;
    }

        #sendButton:disabled, #uploadButton:disabled {
            cursor: not-allowed;
            background-color: #999999;
        }

        #sendButton:hover:enabled, #uploadButton:hover:enabled {
            background-color: #0d3ea9;
        }

        #sendButton i, #uploadButton i {
            font-size: 24px; /* Adjust the icon size if needed */
        }

    ul#messagesList {
        padding-left: 0;
    }

    #fileInput {
        display: none;
    }

    dialog {
        border: solid 1px #ccc;
        padding: 20px;
    }

    .inputMsg {
        display: flex;
        width: 100%;
    }
</style>

<div class="container">
    <div class="main-container">
        <div class="contacts-container" id="contactsContainer">
            <button id="show"><i class="material-icons">add</i></button>
        </div>
        <div class="test">
            <div class="content">
                <ul id="messagesList"></ul>
            </div>
            <div class="input-container">
                <div class="row p-1">
                    <div class="col-6 text-end inputMsg">
                        <input type="file" id="fileInput" />
                        <button type="button" id="uploadButton"><i class="material-icons">attach_file</i></button>
                        <input type="text" class="w-100" id="messageInput" placeholder="Type something" />
                        <button type="button" id="sendButton"><i class="material-icons">send</i></button>
                    </div>
                </div>
            </div>
            <dialog id="dialog">
                <input type="text" id="contactEmailInput" placeholder="Email"></input>
                <button id="addContactButton"><i class="material-icons">add</i></button>
                <button class="close"><i class="material-icons">close</i></button>
            </dialog>

            <dialog id="updateDialog">
                <input type="text" id="newDisplayNameDialogInput" placeholder="New Display Name"></input>
                <button id="saveDisplayNameButton"><i class="material-icons">save</i></button>
                <button class="close"><i class="material-icons">close</i></button>
            </dialog>
        </div>
    </div>
</div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>