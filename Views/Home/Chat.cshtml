<script>
    document.getElementById('burger').addEventListener('click', function (event) {
        const menu = document.getElementById('userContextMenu');
        const burger = document.getElementById('burger');
        const isVisible = menu.style.display === 'block';

        // Переключаем видимость меню
        menu.style.display = isVisible ? 'none' : 'block';

        // Позиционирование меню в месте клика (можно адаптировать)
        const rect = burger.getBoundingClientRect();
        menu.style.top = rect.bottom + "px";
        menu.style.left = rect.left + "px";

        console.log(rect.left, rect.top);

        // Предотвращаем стандартное поведение и всплывание событий
        event.preventDefault();
        event.stopPropagation();
    });

    // Скрываем меню при клике вне его
    window.addEventListener('click', function () {
        document.getElementById('userContextMenu').style.display = 'none';
    });
</script>
