@page

<script>
    var username = "@User.Identity!.Name";
</script>

<style>
    .main-container {
        display: flex;
        flex-direction: row;
        height: 85vh;
    }

    .contacts-container {
        width: 200px;
        border-right: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        padding: 10px;
    }

    .contact-button {
        background-color: #f8f9fa;
        border: none;
        padding: 10px;
        margin: 5px 0;
        text-align: left;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .contact-button:hover {
            background-color: #ddd;
        }

    .active-contact {
        background-color: #007bff;
        color: white;
    }

    .test {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        overflow: hidden;
    }

    .content {
        overflow-y: auto;
        height: calc(100% - 140px);
    }

    .input-container {
        flex-shrink: 0;
        background-color: #f8f9fa;
    }

    .row {
        display: flex;
        align-items: center;
        padding: 10px 0;
    }

    #sendButton, #uploadButton {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 10px;
        padding: 10px;
        border-radius: 50%;
        border: none;
        outline: none;
        color: white;
        background-color: #1751d0;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        #sendButton:disabled, #uploadButton:disabled {
            cursor: not-allowed;
            background-color: #999999;
        }

        #sendButton:hover:enabled, #uploadButton:hover:enabled {
            background-color: #0d3ea9;
        }

        #sendButton i, #uploadButton i {
            font-size: 24px; /* Adjust the icon size if needed */
        }

    ul#messagesList {
        padding-left: 0;
    }

    #fileInput {
        display: none;
    }

    dialog {
        border: solid 1px #ccc;
        padding: 20px;
    }

        dialog .close {
            background: #d9534f;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            float: right;
        }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .message-container {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .message-image {
        max-width: 200px;
        max-height: 200px;
        margin-left: 10px;
    }
</style>


    <div class="container">
        <div class="main-container">
            <div style="display: flex; flex-direction:column;">
                <button onclick="openAvatarDialog()">Change Avatar</button>
                <div class="contacts-container" id="contactsContainer">
                    <button id="show">Add friend</button>
                    <!-- Контакты будут добавляться динамически -->
                </div>
            </div>
            <div class="test">
                <div class="content">
                    <ul id="messagesList"></ul>
                </div>
                <div class="input-container">
                    <div class="row p-1">
                        <div class="col-1">Message</div>
                        <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
                    </div>
                    <div class="row p-1">
                        <div class="col-6 text-end">
                            <input type="file" id="fileInput" />
                            <button type="button" id="uploadButton"><i class="material-icons">attach_file</i></button>
                            <button type="button" id="sendButton" disabled><i class="material-icons">send</i></button>
                        </div>
                    </div>
                </div>
                <dialog id="dialog">
                    <input type="text" id="contactEmailInput" placeholder="Email"></input>
                    <button id="addContactButton">Add</button>
                    <button class="close">Close</button>
                </dialog>

                <dialog id="updateDialog">
                    <input type="text" id="newDisplayNameDialogInput" placeholder="New Display Name"></input>
                    <button id="saveDisplayNameButton">Save</button>
                    <button class="close">Close</button>
                </dialog>

                <dialog id="updateAvatarDialog">
                    <input type="file" id="avatarInput" accept="image/*" />
                    <button id="saveAvatarButton">Save</button>
                    <button class="close">Close</button>
                </dialog>
            </div>
        </div>
    </div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>